# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Provider Selection
AI_PROVIDER=bedrock
SEARCH_PROVIDER=opensearch
VECTOR_PROVIDER=opensearch

# API Configuration
API_V1_PREFIX=/api/v1
MAX_REQUEST_SIZE=52428800
RATE_LIMIT_PER_MINUTE=100

# Performance Settings
SEARCH_TIMEOUT_SECONDS=30
AI_TIMEOUT_SECONDS=60
DOCUMENT_CACHE_TTL=3600

# Compliance Settings
AUDIT_RETENTION_DAYS=2555
ENABLE_DATA_MASKING=true
REQUIRE_MFA=true

# AWS Bedrock Configuration (if AI_PROVIDER=bedrock)
BEDROCK_REGION=us-east-1
BEDROCK_CLAUDE_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_TITAN_MODEL=amazon.titan-text-express-v1
BEDROCK_MAX_TOKENS=4000
BEDROCK_TEMPERATURE=0.1

# Databricks Configuration (if using databricks providers)
DATABRICKS_WORKSPACE_URL=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-token
DATABRICKS_CLUSTER_ID=your-cluster-id
DATABRICKS_MODEL_ENDPOINT=your-model-endpoint
DATABRICKS_VECTOR_ENDPOINT=your-vector-endpoint

# AWS OpenSearch Configuration (if SEARCH_PROVIDER=opensearch)
OPENSEARCH_ENDPOINT=https://your-opensearch-domain.region.es.amazonaws.com
OPENSEARCH_REGION=us-east-1
OPENSEARCH_INDEX=clinical-documents
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=true

# AWS S3 Configuration
S3_BUCKET_NAME=your-clinical-docs-bucket
S3_REGION=us-east-1
S3_CSR_PREFIX=csr/
S3_TMF_PREFIX=tmf/
S3_PROCESSED_PREFIX=processed/

# Delta Lake Configuration
DELTA_CATALOG=clinical_portal
DELTA_SCHEMA=main
DELTA_DOCUMENTS_TABLE=documents
DELTA_CHUNKS_TABLE=document_chunks
DELTA_AUDIT_TABLE=audit_log

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL_SECONDS=3600

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true